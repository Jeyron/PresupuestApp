<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jeiro.presupuestapp.Reportes">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/reportes"
            android:textColor="@color/colorFondo"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <Button
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_reporte_detalle_egreos"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:onClick="llamar_detalle_egreso"
            android:text="@string/reporte_detalle_egresos"
            android:background="@drawable/btnpulsable"
            android:textColor="@color/colorTexto"/>
        <Button
            android:id="@+id/btn_reporte_balance_por_categoria"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:onClick="llamar_balance_categoria_egreso"
            android:text="@string/reporte_Balance_categoría_egreso"
            android:background="@drawable/btnpulsable"
            android:textColor="@color/colorTexto"/>
        <Button
            android:id="@+id/btn_reporte_porcentaje_egreos_x_categoria"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:onClick="llamar_porcentaje_egresos_categoria"
            android:text="@string/reporte_Porcentajes_egresos_categoría"
            android:background="@drawable/btnpulsable"
            android:textColor="@color/colorTexto"/>
        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/reporte_resumen_gastos_x_tarjeta"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:onClick="llamar_resumen_gasto_tarjeta"
            android:layout_height="35dp"
            android:text="@string/reporte_Resumen_gastos_tarjeta"
            android:background="@drawable/btnpulsable"
            android:textColor="@color/colorTexto"/>
    </LinearLayout>

</FrameLayout>
